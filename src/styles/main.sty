\usepackage{styles/pkgs}
\usepackage{styles/code-snipets}
\usepackage{styles/commands}

\setmainfont{Times New Roman}
\onehalfspacing

% Numeracja rozdziałów
\setcounter{tocdepth}{3}
\setcounter{secnumdepth}{3}
\renewcommand{\thesection}{\arabic{section}.}
\renewcommand{\thesubsection}{\thesection\arabic{subsection}}
\renewcommand{\thesubsubsection}{\thesubsection.\arabic{subsubsection}}

% BEGIN: Table of contents styling
\renewcommand\cfttoctitlefont{\hfill\Large\bfseries}
\renewcommand\cftaftertoctitle{\hfill\mbox{}}
\setlength{\cftbeforetoctitleskip}{0pt}
\setlength{\cftaftertoctitleskip}{16pt}

\renewcommand{\cftfigaftersnum}{.}
\renewcommand{\cftfigindent}{0pt}
\renewcommand\cftloftitlefont{\Large\bfseries} % Sets font size for List of figures
\setlength{\cftbeforeloftitleskip}{24pt} % Space before List of figures title
\setlength{\cftafterloftitleskip}{12pt} % Space after List of figures title

\renewcommand{\cfttabaftersnum}{.}
\renewcommand{\cfttabindent}{0pt}
\renewcommand\cftlottitlefont{\Large\bfseries}
\setlength{\cftbeforelottitleskip}{24pt} % Space before List of Tables title
\setlength{\cftafterlottitleskip}{12pt} % Space after List of Tables title

\cftsetindents{section}{0em}{3em}
\cftsetindents{subsection}{0em}{3em}
\cftsetindents{subsubsection}{0em}{3em}
% END

% prevents Underfull \hbox warnings
\setlength{\emergencystretch}{5em}

% Table caption redefinition
\captionsetup[table]{name=Tabela, labelsep=period}
\captionsetup[figure]{name=Rysunek, labelsep=period}
% enumeration levels style definition
\renewcommand{\labelenumii}{\arabic{enumi}.\arabic{enumii}}

\graphicspath{ {./images/} }
% Removes url: from bibliography
\DeclareFieldFormat{url}{\url{#1}}